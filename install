#!/usr/bin/env bash

ln -sfn $HOME/.dotfiles/.bash_profile $HOME/.bash_profile

ln -sfn $HOME/.dotfiles/.bash_logout $HOME/.bash_logout

ln -sfn $HOME/.dotfiles/.bash_aliases $HOME/.bash_aliases

ln -sfn $HOME/.dotfiles/.bash_functions $HOME/.bash_functions

ln -sfn $HOME/.dotfiles/vim/gvimrc $HOME/.gvimrc

ln -sfn $HOME/.dotfiles/vim/vimrc $HOME/.vimrc

ln -sfn $HOME/.dotfiles/vim/ $HOME/.vim

mkdir -p ~/.config && ln -sfn $HOME/.dotfiles/nvim/ $HOME/.config/nvim

ln -sfn $HOME/.dotfiles/tmux/tmux.conf $HOME/.tmux.conf

ln -sfn $HOME/.dotfiles/mysql/my.cnf $HOME/.my.cnf

ln -sfn $HOME/.dotfiles/oh-my-zsh/ $HOME/.oh-my-zsh

mkdir -p ~/.config && ln -sfn $HOME/.dotfiles/htop/ $HOME/.config/htop

git config --global include.path ~/.dotfiles/gitconfig
